<p style="color: green"><%= notice %></p>

<% content_for :title, "Pets" %>

<h1>Pet Members</h1>

<div id="pets">
  <div id="container">
    <div class="row">
      <% @pets.each do |pet| %>
        <div class="col-12 col-sm-6 col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <%= render pet %>
              <p class="mt-3">
                <%= link_to "Show pet", pet, class: "btn btn-primary" %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "Register new pet", new_pet_path, class: "btn btn-success mt-3" %>
